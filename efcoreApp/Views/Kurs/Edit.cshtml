@model KursViewModel
<h2>Kurs Güncelleme</h2>
<hr />
<div class="row">
<div class="col-8">
    <form asp-controller="Kurs" asp-action="Edit" method="post">
    <input type="hidden" asp-for="KursId">
<div class="mb-3">
    <label asp-for="Baslik" class="form-label">Kurs Adı</label>
    <input asp-for="Baslik" class="form-control" />
    <br />
    <div class="mb-3">
    <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
    <select asp-for="OgretmenId" class="form-select" asp-items="ViewBag.Ogretmenler">
        <option value="">Seçiniz</option>
    </select>
</div>
    <button type="submit" class="btn btn-secondary">Kaydet</button>
    </form>
</div>
<br />
<div class="col-4">
    <h5>Öğrenci Listesi</h5>
    <hr>
    <ul>
    @foreach(var item in @Model.KursKayitları)
    {
        <li>@item.Ogrenci.AdSoyad</li>
    }
    </ul>
</div>
</div>