@model IEnumerable<Kurs>
    <h2>Kurs Listesi</h2>
       <a href="/Kurs/Create" class="btn btn-primary">Kurs Ekleme sayfasına git</a>
    <hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m =>m.KursId)</th>
            <th>@Html.DisplayNameFor(m =>m.Baslik)</th>
            <th>@Html.DisplayNameFor(m =>m.Ogretmen.AdSoyad)</th>  
        </tr>
    </thead>
    <tbody>
        @foreach(var kurs in Model) //modelden Kurs sayısı kadar işlem yapar.
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=>kurs.KursId)</td>
                <td>@Html.DisplayFor(modelItem=>kurs.Baslik)</td>
                <td>@Html.DisplayFor(modelItem=>kurs.Ogretmen.AdSoyad)</td>

               
                <td>
                     <a  asp-action="Edit" asp-route-id="@kurs.KursId" class="btn btn-sm btn-primary">Edit</a>
                     <a  asp-action="Delete" asp-route-id="@kurs.KursId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
           
        }
    </tbody>
</table>